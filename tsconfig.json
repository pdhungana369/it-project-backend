{
	"compilerOptions": {
		"target": "ES2019",
    "lib": ["ES2017"], 
		"module": "commonjs",
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"removeComments": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["*"]
		}
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
